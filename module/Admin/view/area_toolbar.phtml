<?php
//$name, $icon, $type, $showTotal = null, $link = null
$currentController	= $this->layout()->controller;
$currentAction		= $this->layout()->action;

switch ($currentAction) {
	case 'index':
		$btnUpdate		= $this->cmsButtonToolbar('Cập nhật', 'fa-refresh', 'ordering', 'yes', null);

		$linkAdd		= $this->cmsLinkAdmin(array('controller' => $currentController, 'action' => 'form'));
		$btnAdd			= $this->cmsButtonToolbar('Thêm', 'fa-plus-square-o', null, null, $linkAdd);

		$btnActive		= $this->cmsButtonToolbar('Kích hoạt', 'fa-check-circle-o', 'active', 'yes', null);
		$btnInActive	= $this->cmsButtonToolbar('Không kích hoạt', 'fa-circle-o', 'inactive', 'yes', null);
		$btnDelete		= $this->cmsButtonToolbar('Xóa', 'fa-minus-square-o', 'delete', 'yes', null);

		$strToolbar 	= $btnUpdate . $btnAdd . $btnActive . $btnInActive . $btnDelete;
		if ($currentController == 'book') {
			$strToolbar 	= $btnUpdate . $btnActive . $btnInActive . $btnDelete;
		}

		break;

	case 'form':
		$btnSave		= $this->cmsButtonToolbar('Lưu', 'fa-save', 'save', null, null);
		$btnSaveClose	= $this->cmsButtonToolbar('Lưu và đóng', 'fa-folder-open-o', 'save-close', null, null);
		$btnSaveNew		= $this->cmsButtonToolbar('Lưu và mới', 'fa-plus-square', 'save-new', null, null);

		$linkCancel		= $this->cmsLinkAdmin(array('controller' => $currentController, 'action' => 'index'));
		$btnCancel		= $this->cmsButtonToolbar('Trở về', 'fa-arrow-circle-left', null, null, $linkCancel);

		$strToolbar 	= $btnSave . $btnSaveClose . $btnSaveNew . $btnCancel;
		break;

	default:
		break;
}
?>
<div class="row">
    <div class="text-center">
        <?php echo $strToolbar; ?>
    </div>
</div>